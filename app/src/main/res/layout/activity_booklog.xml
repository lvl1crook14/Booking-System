<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".booklog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/gelasio_semibold"
            android:text="Fill in to set your Room Booking:"
            android:textSize="16.3dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="652dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/txtDateAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Choose Date and Time: "
                android:fontFamily=""
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:textSize="14dp"
                />

            <Button
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text=" JUN, 19 2924"
                android:onClick="openDatePicker"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>