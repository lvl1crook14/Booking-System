<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <!-- Guest Information -->
    <TextView
        android:id="@+id/tv_guest_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Information"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <EditText
        android:id="@+id/et_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:inputType="phone"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <!-- Reservation Dates -->
    <TextView
        android:id="@+id/tv_reservation_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Dates"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_date_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-in Date (YYYY-MM-DD)"
        android:inputType="date"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <EditText
        android:id="@+id/et_date_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-out Date (YYYY-MM-DD)"
        android:inputType="date"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:backgroundTintMode="src_in"
        android:padding="12dp"
        android:text="Submit Reservation"
        android:textColor="@android:color/white"
        android:textColorLink="@color/medyo_green"
        app:icon="@drawable/bg"
        app:iconTintMode="src_in" />

</LinearLayout>
